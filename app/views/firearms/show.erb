<h1><%="#{@firearm.make} #{@firearm.model}"%></h1>

<ul>
  <li>Caliber: <%= @firearm.caliber %></li>
  <li>Serial Number: <%= @firearm.serial_number %></li>
  <li>Purchase Date: <%= @firearm.purchase_date %></li>
  <li>Price: $<%= @firearm.price %></li>
</ul>

<br>

<form method="get" action="/firearms/<%= @firearm.id %>/edit">
  <input type="submit" value="Edit This Firearm">
</form>

<br>

<form method="post" action="/firearms/<%= @firearm.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete This Firearm">
</form>

<br>

<p><% if flash.has?(:message)%><%= flash[:message] %><% end %></p>